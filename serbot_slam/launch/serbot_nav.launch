<launch>
  <!-- Arguments -->
  
  <arg name="map_file" default="$(find serbot_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- serbot -->
  <include file="$(find serbot_bringup)/launch/serbot_remote.launch">
  </include>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find serbot_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find serbot_navigation)/launch/move_base.launch">
    <!--<arg name="move_forward_only" value="$(arg move_forward_only)"/>-->
  </include>

  <node pkg="gmapping" type="slam_gmapping" name="serbot_slam_gmapping" output="screen"/>
  <!--<node pkg="tf" type="static_transform_publisher" name="base_footprint_to_map"
	      args="0 0 0 0 0 0 base_footprint map 100"/>-->
  <!--<include file="$(find serbot_slam)/launch/serbot_tf.launch"/>-->
  <!--<node pkg="tf" type="static_transform_publisher" name="laser_to_map_broadcaster" args="0 0 0 0 0 0 laser map 100"/>-->

  <!--<include file="$(find serbot_slam)/launch/serbot_gmapping.launch"/>-->
  <!--<node pkg="gmapping" type="slam_gmapping" name="serbot_slam_gmapping" output="screen"/>-->
  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find serbot_navigation)/rviz/serbot_navigation.rviz"/>
  </group>
</launch>
